<p id="notice"><%= notice %></p>

<h1>Workers</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Rut</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Mail</th>
      <th>Equipo</th>
      <th>Jefe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.nombre %></td>
        <td><%= worker.rut %></td>
        <td><%= worker.direccion %></td>
        <td><%= worker.telefono %></td>
        <td><%= worker.mail %></td>
        <td><%= worker.equipo %></td>
        <td><%= worker.jefe %></td>
        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

